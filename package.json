{
  "name": "conditional-paths-action",
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": ">= 24"
  },
  "private": true,
  "description": "Execute your workflow steps only if relevant files are modified.",
  "main": "lib/main.js",
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "package": "ncc build src/main.ts -o dist --source-map --license licenses.txt",
    "package:watch": "pnpm run package -- --watch",
    "clean": "rm -rf dist lib coverage .tsbuildinfo",
    "all": "pnpm run format:check && pnpm run lint && pnpm run check && pnpm run test && pnpm run package",
    "prepare": "pre-commit install || true"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/santosr2/conditional-paths-action.git"
  },
  "keywords": [
    "actions",
    "github",
    "conditional",
    "paths",
    "changes",
    "monorepo",
    "selective",
    "workflow",
    "filter"
  ],
  "author": "Rubens Santos <rubenssegundo404@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "@actions/github": "6.0.0",
    "picomatch": "^2.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@octokit/webhooks-types": "^7.3.1",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.0.0",
    "@types/picomatch": "^2.3.3",
    "@vercel/ncc": "^0.38.1",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.14.0",
    "js-yaml": "^4.1.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.19.0",
    "vitest": "^2.1.8",
    "zod": "^3.24.1"
  }
}
