{
  "name": "conditional-paths-action",
  "version": "1.0.0",
  "type": "module",
  "description": "Execute your workflow steps only if relevant files are modified.",
  "main": "dist/index.js",
  "engines": {
    "node": ">=22.0.0 <25.0.0"
  },
  "packageManager": "pnpm@10.15.1",
  "private": true,
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run __tests__ --exclude '__tests__/**/*.{integration,e2e,bench}.test.ts'",
    "test:integration": "vitest run __tests__/integration.test.ts",
    "test:e2e": "vitest run __tests__/e2e.test.ts",
    "bench": "vitest bench",
    "coverage": "vitest run --coverage",
    "package": "pnpm run build && ncc build lib/main.js -o dist --source-map --license licenses.txt --minify",
    "package:watch": "pnpm run package -- --watch",
    "clean": "rm -rf dist lib coverage .tsbuildinfo",
    "docs": "typedoc src/main.ts src/lib/*.ts --out docs/api --theme default --name 'conditional-paths-action API'",
    "docs:serve": "pnpm run docs && cd docs/api && python3 -m http.server 8080",
    "license-check": "license-checker --onlyAllow 'MIT;ISC;BSD-2-Clause;BSD-3-Clause;Apache-2.0;UNLICENSED' --excludePrivatePackages",
    "security-audit": "pnpm audit --audit-level moderate || echo 'Note: Known false positives for debug and color-name packages'",
    "deps:update": "pnpm update --latest",
    "deps:check": "pnpm outdated",
    "validate": "pnpm run format:check && pnpm run lint && pnpm run check",
    "test:all": "pnpm run test:unit && pnpm run test:integration && pnpm run test:e2e",
    "ci": "pnpm run validate && pnpm run test:coverage && pnpm run package",
    "dev": "pnpm run build && pnpm run test:watch",
    "prerelease": "pnpm run ci && pnpm run bench",
    "prepare": "pre-commit install || true"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/santosr2/conditional-paths-action.git"
  },
  "keywords": [
    "actions",
    "github",
    "conditional",
    "paths",
    "changes",
    "monorepo",
    "selective",
    "workflow",
    "filter"
  ],
  "author": "Rubens Santos <rubenssegundo404@gmail.com>",
  "license": "MIT",
  "spdxLicenseId": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "6.0.1",
    "picomatch": "^4.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@octokit/webhooks-types": "^7.6.1",
    "@types/benchmark": "^2.1.5",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.3.1",
    "@types/picomatch": "^4.0.2",
    "@vercel/ncc": "^0.38.3",
    "@vitest/coverage-v8": "^3.2.4",
    "benchmark": "^2.1.4",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.3.0",
    "js-yaml": "^4.1.0",
    "license-checker": "^25.0.1",
    "prettier": "^3.6.2",
    "typedoc": "^0.28.12",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0",
    "vitest": "^3.2.4",
    "zod": "^4.1.5"
  },
  "pnpm": {
    "overrides": {
      "debug": "4.4.1",
      "color-name": "1.1.4"
    }
  }
}
